{
  "name": "ssrc",
  "version": "1.0.0",
  "description": "service side render",
  "main": "index.js",
  "sideEffects": [
    "*.css",
    "*.styl",
    "*.stylus",
    "*.vue"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist && rimraf server-build",
    "dev:client": "cross-env NODE_ENV=development webpack-dev-server --config build/webpack.client.dev.js",
    "dev:server": "nodemon server/server_dev.js",
    "dev": "npx concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "build:client": "cross-env NODE_ENV=production webpack --config build/webpack.client.pro.js",
    "build:server": "cross-env NODE_ENV=production webpack --config build/webpack.server.pro.js",
    "prebuild": "npm run clean",
    "build": "npm run build:client && npm run build:server",
    "start": "cross-env NODE_ENV=production node server/server_pro.js",
    "practice": "npx webpack-dev-server --config build/webpack.practice.conf.js",
    "http": "npx http-server -p 3333 dist"
  },
  "author": "ouyangzhigang",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.10.5",
    "axios": "^0.19.2",
    "concurrently": "^5.2.0",
    "core-js": "^3.6.5",
    "ejs": "^3.1.3",
    "koa": "^2.4.1",
    "koa-router": "^7.4.0",
    "koa-send": "^5.0.1",
    "sha1": "^1.1.1",
    "vue": "^2.6.11",
    "vue-meta": "^2.4.0",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.6.11",
    "vuex": "^3.5.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^4.0.0",
    "html-webpack-plugin": "^4.3.0",
    "http-server": "^0.12.3",
    "memory-fs": "^0.5.0",
    "mini-css-extract-plugin": "^0.9.0",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "stylus": "^0.54.8",
    "stylus-loader": "^3.0.2",
    "url-loader": "^4.1.0",
    "vue-loader": "^15.9.3",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.0.9",
    "webpack-node-externals": "^2.5.0"
  },
  "browserslist": "> 0.25%, not dead"
}
